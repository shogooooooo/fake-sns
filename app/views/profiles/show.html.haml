.container 
  .profile_back
    - if !current_page?(root_path)
      = link_to :back do
        = image_tag 'Group.png', class: 'header_back'
  .profile_name
    = current_user.account
  .profile_image
    = form_with(method: 'put', local: true) do |f|
      = f.label :avatar do
        - if @avatar&.attached?
          = image_tag @avatar, class: 'profile_avatar', width: '76.88px', height: '76,88px'
        - else
          = image_tag 'default_avatar.png', class: 'profile_avatar'
        = f.file_field :avatar, class: 'uploader', style: 'display:none'
      = f.submit '画像を変更'
  %ul.profile_detail 
    %li
      %p 44
      %span Posts
    %li
      %p 110
      %span Followers
    %li
      %p 44
      %span Following
  .profile_post
    - current_user.posts.each do |post|
      - post.images.each do |image|
        = image_tag image

    